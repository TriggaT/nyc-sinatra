<h2>Update Figure</h2>

<!-- add content here -->
<form action='/figures/<%= @figure.id %>' method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
<label for="figure_name"> <strong> Name: <%= @figure.name %> </strong> </label><br>
<input type="text" id="figure_name" name='figure[name]' value="<%= @figure.name %>"><br>
<br><label > <strong> Titles: </strong> </label><br>
<% Title.all.each do |title| %>
  <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %></input><br>
<% end %>
<label for="new_title"> <strong> Create New Title:</strong> </label><br>
<input type="text" id="new_title" name="title[name]"><br><br>


<label > <strong> Landmarks: </strong></label><br>
<% Landmark.all.each do |landmark| %>
  <input type="checkbox" id="landmark_<%=landmark.id%>" name='figure[landmark_ids][]' value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input><br>
<% end %>



<label> <strong> Create New Landmark: </strong></label><br>
<label for="new_landmark"> Name: </label> 
<input type="text" id="new_landmark" name='landmark[name]'><br>
<label> Year: </label> 
<input type="text" name='landmark[year_completed]'><br><br>
<input type="submit" value="Edit Figure"><br>
</form><br>
